.nested-fields
  .row.field.align-items-center
    .col-md-9.col-sm-6
      = f.hidden_field :id 
      = f.select :group_id, groups.collect { |g| [g.name, g.id] }, { prompt: t(:select_a_group) }, class: "custom-select"
      - if !f.object.errors.empty?
        .text-danger
          - f.object.errors.values.each do |error|
            = error[0]
    .col-md-3.col-sm-6
      = link_to_remove_association t(:remove_group), f, class: "btn btn-outline-warning float-right"
  .separator
.d-flex.flex-column.flex-table-wrapper-parent
  .d-flex.flex-column.flex-table-wrapper
    .index-table-actions
      = link_to t(:new_user), new_user_path, class: "btn btn-green"
    .index-table-wrapper
      %table.table.index-table.table-hover.table-responsive-sm
        %thead.thead-light.table-head
          %tr
            %th= t(:id)
            %th= t(:name)
            %th.d-none.d-md-block.d-md-table-cell= t(:father_last_name)
            %th.d-none.d-md-block.d-md-table-cell= t(:mother_last_name)
            %th= t(:email)
            %th.d-none.d-md-block.d-md-table-cell= t(:status)
            %th= t(:actions)
        %tbody.table-body
          - @user.each do |user|
            %tr
              %td= user.id
              %td= user.name
              %td.d-none.d-md-block.d-md-table-cell= user.father_last_name
              %td.d-none.d-md-block.d-md-table-cell= user.mother_last_name
              %td= user.email
              %td.d-none.d-md-block.d-md-table-cell
                - if user.locked_at?
                  = t(:locked)
                - else
                  = t(:unlocked)
              %td
                .dropdown.show
                  %a#dropdownMenuLink.btn.btn-green{ href: "#", "data-toggle" => "dropdown", aria: { expanded: false, haspopup: true } }
                    = t(:actions)
                  .dropdown-menu.table-dropdown-menu{ "aria-labelledby" => "dropdownMenuLink" }
                    = link_to t(:show), user_path(user), class: "btn-green-dropdown-item btn-green"
                    = link_to t(:edit), edit_user_path(user), class: "btn-green-dropdown-item btn-green"
                    - if current_user != user
                      = link_to t(:delete), user_path(user), method: :delete, class: "btn-green-dropdown-item btn-green", data: { confirm: 'Â¿Eliminar?'}
                    - if current_user != user
                      .dropdown-divider
                      = link_to masquerade_path(user), class: "btn-green-dropdown-item btn-green" do
                        .fa.fa-id-badge
                        = t(:masquerade_login)
                      = link_to lock_user_path(user), method: :post, class: "btn-green-dropdown-item btn-green" do
                        %a.fa.fa-lock
                        = t(:lock)
                      = link_to unlock_user_path(user), method: :post, class: "btn-green-dropdown-item btn-green" do
                        %a.fa.fa-unlock
                        = t(:unlock)
  %div.index-table-pagination-wrapper
    = will_paginate(@user, renderer: WillPaginate::ActionView::Bootstrap4LinkRenderer, class: 'pagination-nav float-right', previous_label: t(:previous), next_label: t(:next))
    %clearfix
